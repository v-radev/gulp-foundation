{
  "root": {
    "src": "./source",
    "dest": "./public"
  },

  "tasks": {
    "js": {
      "src": "javascripts",
      "dest": "javascripts",
      "extractSharedJs": true,
      "entries": {
        "app": ["./app.js"],
        "page": ["./page.js"]
      },
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    }
  }
}