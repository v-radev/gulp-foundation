{
  "root": {
    "source": "./source",
    "destination": "./public"
  },

  "tasks": {
    "js": {
      "source": "js",
      "destination": "js",
      "extensions": ["js"]
    },

    "css": {
      "source": "css",
      "destination": "css",
      "modules": [
        "node_modules/bootstrap/dist/css/bootstrap.min.css",
        "node_modules/spectrum-colorpicker/spectrum.css"
      ],
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "source": "images",
      "destination": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "browserSync": {
      "proxy": "gulp-foundation.dev"
    }
  },
  "watchableTasks": ["css", "js"]
}