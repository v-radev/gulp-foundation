{
  "root": {
    "source": "./source",
    "destination": "./public"
  },

  "tasks": {
    "js": {
      "source": "js",
      "destination": "js",
      "extensions": ["js"]
    },

    "css": {
      "source": "stylesheets",
      "destination": "stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "source": "images",
      "destination": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    }
  },
  "watchableTasks": ["css", "js"]
}